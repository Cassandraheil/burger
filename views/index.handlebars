<div class="notAte">
<h2>Burgers not Eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="eaten">
<h2>Burgers already ate</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">
<h2>Order a unique burger</h2>

  <div class="form-group">
    <label for="Burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>
  <br>

  <button type="submit">Add Burger</button>
</form>